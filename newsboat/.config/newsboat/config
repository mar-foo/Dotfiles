auto-reload yes
max-items 100

bind-key j down
bind-key k up
bind-key g home
bind-key G end
bind-key h quit
bind-key l open
bind-key f pagedown
bind-key d pageup

color listnormal red default
color listnormal_unread red default bold
color listfocus white default bold
color listfocus_unread white red bold
color info default red
color background default default
color article white default

browser "abrowser %u"

macro v set browser "devour mpv %u" ; open-in-browser ; set browser "abrowser %u" ;
macro y set browser "youtube-dl --prefer-free-formats" ; open-in-browser ; set browser "abrowser %u" ;
