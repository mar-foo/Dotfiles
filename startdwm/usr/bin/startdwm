#!/bin/bash

picom --experimental-backend &

#Put monitor on the left
screen=$(xrandr | grep HDMI-A-0 | sed "s/ /;/g" | awk -F';' '{print $2}')

case $screen in
	"connected")xrandr --output eDP --primary --mode 1366x768 --pos 1920x163 --rotate normal --output HDMI-A-0 --mode 1920x1200 --pos 0x0 --rotate normal;;
	*);;
esac

#Set wallpaper and start compositor
hsetroot -cover ~/.config/wall.jpg

##SET DWM BAR##

#Functions
dat(){
	dat=$(date +"%a, %d %b")
	echo -e $dat
}
tim(){
	tim=$(date +"%H:%M")
	echo -e $tim
}

#bat(){ battery=$(cat /sys/class/power_supply/BAT0/capacity)
	#status=$(cat /sys/class/power_supply/BAT0/status)
	#if [[ "$battery" -gt 75 ]]; then
			#icon=$"ï‰€"
	#elif [[ "$battery" -le 75 ]] && [[ "$battery" -gt 50 ]]; then
			#icon=$"ï‰"
	#elif [[ "$battery" -gt 33 ]] && [[ "$battery" -le 50 ]]; then
			#icon=$"ï‰‚"
	#elif [[ "$battery" -gt 10 ]] && [[ "$battery" -le 33 ]]; then
			#icon=$"ï‰ƒ"
	#else
			#icon=$"ï‰„"
	#fi
	#if [[ $status = "Discharging" ]]; then 
		#echo "$icon $battery%"
	#else 
		#echo "$iconïƒ§ $battery%"
	#fi
#}	

volume(){
	STATUS=$(amixer sget Master | tail -n1 | sed -r "s/.*\[(.*)\]/\1/")
	VOL=$(amixer get Master | tail -n1 | sed -r "s/.*\[(.*)%\].*/\1/")
	if [ "$STATUS" = "off" ]; then
			    #printf "ğŸ”‡"
			    printf "MUTE"
		else
#			if [ "$VOL" -gt 0 ] && [ "$VOL" -le 33 ]; then
#			    printf "ğŸ”ˆ %s%%" "$VOL"
#			elif [ "$VOL" -gt 33 ] && [ "$VOL" -le 66 ]; then
#			    printf "ğŸ”‰ %s%%" "$VOL"
#			else
#			    printf "ğŸ”Š %s%%" "$VOL"
			   printf "Volume: $VOL%"
	fi
}

#Loop to write on the bar
while(true); do
whtr=$(cat /home/mario/.local/bin/wheather.txt)
mem=$(free -h | awk '/^Mem:/ {print $3 "/" $2}')
disk=$(cat /home/mario/.local/bin/disk.txt)
song=$(cat /home/mario/.local/bin/song.txt)
if [[ "$song" != "" ]]; then
	#xsetroot -name "[ï€¥ $song] [ïƒ‡ $mem] [$(volume)] [ï³ $(dat)] [ï€— $(tim)]"
	xsetroot -name " $song [ $(volume) ] [ $(dat) $(tim) ]"
else 
	#xsetroot -name "[ïƒ‡ $mem] [$(volume)]  [ï³ $(dat)] [ï€— $(tim)]"
	xsetroot -name " [ $(volume) ] [ $(dat) $(tim) ]"
fi	
	sleep 1s
done &
#[ï†‡ $disk]
##Start notification daemon##
dunst &

#Start sxhkd
sxhkd -c ~/Github/Dotfiles/dwm/sxhkdrc &

#Start dwm#
exec dwm

