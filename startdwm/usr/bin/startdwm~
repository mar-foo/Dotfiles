#!/bin/bash

picom &
xmodmap /home/mario/.Xmodmap
/home/mario/.local/bin/wal -R &

#Put monitor on the left
screen=$(xrandr | grep HDMI-A-0 | sed "s/ /;/g" | awk -F';' '{print $2}')

case $screen in
	"connected")xrandr --output eDP --primary --mode 1366x768 --pos 1920x163 --rotate normal --output VGA-1 --mode 1920x1200 --pos 0x0 --rotate normal;;
	*);;
esac

##SET DWM BAR##

#Functions
dat(){
	dat=$(date +"%a, %d %b")
	echo -e $dat
}
tim(){
	tim=$(date +"%H:%M")
	echo -e $tim
}

# bat(){ battery=$(cat /sys/class/power_supply/BAT0/capacity)
# 	status=$(cat /sys/class/power_supply/BAT0/status)
# 	if [[ "$battery" -gt 75 ]]; then
# 			icon=$""
# 	elif [[ "$battery" -le 75 ]] && [[ "$battery" -gt 50 ]]; then
# 			icon=$""
# 	elif [[ "$battery" -gt 33 ]] && [[ "$battery" -le 50 ]]; then
# 			icon=$""
# 	elif [[ "$battery" -gt 10 ]] && [[ "$battery" -le 33 ]]; then
# 			icon=$""
# 	else
# 			icon=$""
# 	fi
# 	if [[ $status = "Discharging" ]]; then 
# 		echo "$icon $battery%"
# 	else 
# 		echo "$icon $battery%"
# 	fi
# }	

volume(){
	STATUS=$(amixer sget Master | tail -n1 | sed -r "s/.*\[(.*)\]/\1/")
	VOL=$(amixer get Master | tail -n1 | sed -r "s/.*\[(.*)%\].*/\1/")
	if [ "$STATUS" = "off" ]; then
			    #printf "🔇"
			    printf "MUTE"
		else
#			if [ "$VOL" -gt 0 ] && [ "$VOL" -le 33 ]; then
#			    printf "🔈 %s%%" "$VOL"
#			elif [ "$VOL" -gt 33 ] && [ "$VOL" -le 66 ]; then
#			    printf "🔉 %s%%" "$VOL"
#			else
#			    printf "🔊 %s%%" "$VOL"
			   printf "Volume: $VOL%"
	fi
}

#Loop to write on the bar
while(true); do
whtr=$(cat /home/mario/.local/bin/wheather.txt)
mem=$(free -h | awk '/^Mem:/ {print $3 "/" $2}')
disk=$(cat /home/mario/.local/bin/disk.txt)
song=$(cat /home/mario/.local/bin/song.txt)
battery="Battery: $(cat /sys/class/power_supply/BAT0/capacity)"
if [[ "$song" != "" ]]; then
	#xsetroot -name "[ $song] [ $mem] [$(volume)] [ $(dat)] [ $(tim)]"
	xsetroot -name " $song [ $(volume) ] [ $battery ] [ $(dat) $(tim) ]"
else 
	#xsetroot -name "[ $mem] [$(volume)]  [ $(dat)] [ $(tim)]"
	xsetroot -name " [ $(volume) ] [ $battery ] [ $(dat) $(tim) ]"
fi	
	sleep 1s
done &

##Start notification daemon##
dunst &

#Start sxhkd
sxhkd -c ~/Github/suckless/dwm1/sxhkdrc &

# Start emacs as first program
{
    sleep 5
    emacsclient -s /tmp/emacs1000/server -c
} &

#Start dwm#
exec dwm
